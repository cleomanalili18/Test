<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cleo.wanderlustapp.FourthScreen"
    android:background="@drawable/Background3">

    <ImageView
        android:id="@+id/iv_title"
        android:src="@drawable/Title"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/tv_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="21dp"
        android:text="Find the hotel that suits you perfectly!"
        android:textSize="18sp"
        android:layout_below="@+id/iv_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_eliz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Elizabeth Hotel"
        android:textSize="25sp"
        android:layout_below="@+id/tv_hotel"
        android:layout_alignLeft="@+id/tv_hotel"
        android:layout_alignStart="@+id/tv_hotel" />

    <Button
        android:id="@+id/btn_deal1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="View Deal"
        android:layout_below="@+id/tv_eliz"
        android:layout_alignLeft="@+id/tv_eliz"
        android:layout_alignStart="@+id/tv_eliz" />

    <RatingBar
        android:id="@+id/rb_deal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_eliz"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tv_azalea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Azalea Residences"
        android:textSize="25sp"
        android:layout_below="@+id/rb_deal1"
        android:layout_alignLeft="@+id/btn_deal1"
        android:layout_alignStart="@+id/btn_deal1" />

    <Button
        android:id="@+id/deal2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="View Deal"
        android:layout_below="@+id/tv_azalea"
        android:layout_alignLeft="@+id/tv_azalea"
        android:layout_alignStart="@+id/tv_azalea" />

    <RatingBar
        android:id="@+id/rb_deal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_azalea"
        android:layout_alignLeft="@+id/rb_deal1"
        android:layout_alignStart="@+id/rb_deal1" />

    <TextView
        android:id="@+id/tv_chalet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chalet Baguio"
        android:textSize="25sp"
        android:layout_below="@+id/rb_deal2"
        android:layout_alignLeft="@+id/deal2"
        android:layout_alignStart="@+id/deal2"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btn_deal3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="View Deal"
        android:layout_below="@+id/tv_chalet"
        android:layout_alignLeft="@+id/tv_chalet"
        android:layout_alignStart="@+id/tv_chalet" />

    <RatingBar
        android:id="@+id/rb_deal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_chalet"
        android:layout_alignLeft="@+id/rb_deal2"
        android:layout_alignStart="@+id/rb_deal2" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cleo.wanderlustapp.LastScreen"
    android:background="@drawable/Background3">

    <ImageView
        android:id="@+id/iv_title"
        android:src="@drawable/Title"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/tv_thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Thank you for using Wanderlust!"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_thanks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="With Wanderlust, you can easily plan your vacation in just few clicks away with just your android phone!"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/tv_nexttrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="107dp"
        android:text="Use Wanderlust to have a worry free vacation!"
        android:textSize="18sp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wanna book your next trip?"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/tv_nexttrip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We hope to travel with you again!"
        android:textSize="25sp"
        android:layout_below="@+id/tv_message"
        android:layout_alignLeft="@+id/tv_thanks"
        android:layout_alignStart="@+id/tv_thanks"
        android:layout_marginTop="28dp" />

    <Button
        android:id="@+id/btn_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please rate Wanderlust!"
        android:layout_below="@+id/tv_nexttrip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

</RelativeLayout>
